<div class="<%= comment_class %>" id="<%= comment_id %>">
<div class="comment_header">
    <div class="comments_count"><%= comment_count %></div> 
</div>
<div class="comment_body">
	<div class="comment_avatar">
	    <%= comment_avatar %>
	</div>
	<div class="comment_content">
	    <%=white_list( link_to comment_writer, comment_homepage, :rel => 'external nofollow')%> <%= t "txt.view.comments._comment.said" %> <br/>
	    <small><%= comment_time %></small>
	    <%= comment_content %>
	</div>
</div>
</div>
